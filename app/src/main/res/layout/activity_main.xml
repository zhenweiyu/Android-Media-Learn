<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zwy.androidmediahandler.MainActivity">

    <TextView
        android:id="@+id/tv_file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录音"
        android:onClick="startRecordVoice"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止录音"
        android:onClick="stopRecordVoice"
         />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放录音"
        android:onClick="startPlayVoice"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止播放录音"
        android:onClick="stopPlayVoice"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分解视频文件"
        android:onClick="extractVideo"/>


</LinearLayout>
